<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
    >
    <Button
        android:id="@+id/outlinedButton"
        android:layout_width="350dp"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content"
        android:text="Step 1"
        style="?attr/materialButtonOutlinedStyle"
        />
    <Button
        android:id="@+id/outlinedButton1"
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/outlinedButton"
        android:text="Step 2"
        style="?attr/materialButtonOutlinedStyle"
        />
        <Button
            android:id="@+id/outlinedButton2"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/outlinedButton1"
            android:text="Step 3"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/outlinedButton3"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/outlinedButton2"
            android:text="Step 4"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/outlinedButton4"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/outlinedButton3"
            android:text="Step 5"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/outlinedButton5"
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/outlinedButton4"
            android:text="Step 6"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/outlinedButton6"
            android:layout_width="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/outlinedButton5"
            android:text="Step 7"
            style="?attr/materialButtonOutlinedStyle"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextField"
            android:layout_width="350dp"
            android:layout_marginStart="25dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/outlinedButton6"
            android:hint="Solution"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <EditText
                android:id="@+id/solutionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:layout_marginBottom="400px"
            android:textColor="#000000"
            android:text="10" />
        <TextView
            android:id="@+id/pointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:layout_marginBottom="200px"
            android:textColor="#000000"
            android:text="Bodovi:" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>