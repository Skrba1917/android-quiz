<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="0dp">


        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:text="A1" />

        <Button
            android:id="@+id/button_submit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:text="A2" />

        <Button
            android:id="@+id/button_submit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:text="A3" />

        <Button
            android:id="@+id/button_submit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:text="A4" />

        <Button
            android:id="@+id/button_resultA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit3"
            android:layout_marginTop="85dp"
            android:layout_marginStart="12dp"
            android:text="A" />

        <Button
            android:id="@+id/button_submit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:layout_marginStart="112dp"
            android:text="B1" />

        <Button
            android:id="@+id/button_submit6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit5"
            android:layout_marginTop="10dp"
           android:layout_marginStart="112dp"
            android:text="B2" />

        <Button
            android:id="@+id/button_submit7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit6"
            android:layout_marginTop="10dp"
           android:layout_marginStart="112dp"
            android:text="B3" />

        <Button
            android:id="@+id/button_submit8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit7"
            android:layout_marginTop="10dp"
          android:layout_marginStart="112dp"     
            android:text="B4" />

        <Button
            android:id="@+id/button_resultB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit3"
            android:layout_marginTop="85dp"
            android:layout_marginStart="112dp"
            android:text="B" />
        <Button
            android:id="@+id/button_submit9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
             android:layout_marginStart="212dp"
            android:text="C1" />

        <Button
            android:id="@+id/button_submit10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit9"
            android:layout_marginTop="10dp"
            android:layout_marginStart="212dp"
            android:text="C2" />

        <Button
            android:id="@+id/button_submit11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit10"
            android:layout_marginTop="10dp"
            android:layout_marginStart="212dp"
            android:text="C3" />

        <Button
            android:id="@+id/button_submit12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit11"
            android:layout_marginTop="10dp"
            android:layout_marginStart="212dp"
            android:text="C4" />

        <Button
            android:id="@+id/button_resultC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit3"
            android:layout_marginTop="85dp"
            android:layout_marginStart="212dp"
            android:text="C" />
        <Button
            android:id="@+id/button_submit13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="24dp"
            android:layout_marginStart="312dp"
            android:text="D1" />

        <Button
            android:id="@+id/button_submit14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit13"
            android:layout_marginTop="10dp"
            android:layout_marginStart="312dp"
            android:text="D2" />
        <Button
            android:id="@+id/button_submit15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit14"
            android:layout_marginTop="10dp"
            android:layout_marginStart="312dp"
            android:text="D3" />
        <Button
            android:id="@+id/button_submit16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit15"
            android:layout_marginTop="10dp"
            android:layout_marginStart="312dp"
            android:text="D4" />

        <Button
            android:id="@+id/button_resultD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_submit3"
            android:layout_marginTop="85dp"
            android:layout_marginStart="312dp"
            android:text="D" />

        <EditText
            android:id="@+id/et_finalResult"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="350dp"
            android:hint="Final Result"
            android:inputType="text"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_nextGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:text="Next Game"
            android:textSize="20sp" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>